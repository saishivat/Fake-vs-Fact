<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Fake vs Fact Image Combiner</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 20px;
      background-color: #f2f2f2;
    }
    h1 {
      margin-bottom: 20px;
    }
    input {
      margin: 10px;
    }
    #preview-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin: 20px 0;
    }
    .img-box {
      border: 2px solid #ccc;
      padding: 10px;
      background: white;
    }
    .img-box h2 {
      margin: 0 0 10px;
      color: white;
      background-color: #333;
      padding: 5px 0;
    }
    .img-box img {
      max-width: 300px;
      height: auto;
    }
    #combined-result {
      margin-top: 20px;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <h1>Fake vs Fact Image Combiner</h1>

  <input type="file" id="fakeImgInput" accept="image/*">
  <input type="file" id="factImgInput" accept="image/*">

  <div id="preview-container">
    <div class="img-box" id="fakeBox">
      <h2 style="background-color: red;">Fake</h2>
      <img id="fakePreview" src="" alt="Fake Image Preview">
    </div>
    <div class="img-box" id="factBox">
      <h2 style="background-color: green;">Fact</h2>
      <img id="factPreview" src="" alt="Fact Image Preview">
    </div>
  </div>

  <button onclick="downloadCombinedImage()">Download Combined Image</button>

  <div id="combined-result"></div>

  <script>
    const fakeInput = document.getElementById('fakeImgInput');
    const factInput = document.getElementById('factImgInput');
    const fakePreview = document.getElementById('fakePreview');
    const factPreview = document.getElementById('factPreview');

    fakeInput.addEventListener('change', () => loadImage(fakeInput, fakePreview));
    factInput.addEventListener('change', () => loadImage(factInput, factPreview));

    function loadImage(input, preview) {
      const file = input.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = e => {
          preview.src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    }

    function downloadCombinedImage() {
      html2canvas(document.getElementById('preview-container')).then(canvas => {
        const link = document.createElement('a');
        link.download = 'Fake_vs_Fact.png';
        link.href = canvas.toDataURL();
        link.click();

        // Optional: Show preview
        const result = document.getElementById('combined-result');
        result.innerHTML = '<h2>Combined Image:</h2>';
        result.appendChild(canvas);
      });
    }
  </script>

</body>
</html>
